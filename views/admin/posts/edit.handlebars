<div class="container">
    <h1>Edit Posts</h1>
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/posts/edit/{{post._id}}?newMethod=PUT" method="post">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" value="{{post.title}}" id="title" placeholder="Enter the Title">
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="status" id="status">
                        <option value="public">public</option>
                        <option value="private">private</option>
                        <option value="draft">draft</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select class="form-control" name="category" id="status">
                        {{#select post.category}}
                            {{#each categories}}
                                <option value="{{_id}}">{{title}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class="form-check ml-3">
                    <input type="checkbox" class="form-check-input" name="allowcomments" id="title" placeholder="Enter the Title">
                    allowcomments
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea type="text" class="form-control" name="description" id="title" placeholder="Enter the Title">{{post.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>